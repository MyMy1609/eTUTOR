        <a href="@Url.Action("Dashboard","Home")" class="simple-text logo-mini">
                  
        </a>
        <a href="@Url.Action("Dashboard","Home")" class="simple-text logo-normal">
            eTuTor
        </a>
    </div>
    <div class="sidebar-wrapper">
        <div class="user">
            <div class="photo">
                <img src="~/Content/build/admin/img/faces/avatar.jpg" />
            </div>
            <div class="user-info">
                <a data-toggle="collapse" href="#collapseExample" class="username">
