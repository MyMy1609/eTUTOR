                    <p> Khóa Tài Khoản</p>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("course","Home")">
                    <i class="material-icons">import_contacts</i>
                    <p> Quản Lý Buổi Học</p>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("contact","Home")">
                    <i class="material-icons">chat</i>
                    <p> Quản lý Liên Hệ</p>
                </a>
            </li>
        </ul>
    </div>
