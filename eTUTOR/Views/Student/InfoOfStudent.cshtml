<div class="image-container set-full-height">

    <div class="container row">
        <div class="left col-4">
            <img src="~/Content/img/avatar/student/@Html.DisplayFor(model => model.avatar)" class="ml-4 mt-4" height="250px" width="250px"
                 alt="avatar" style="border-radius: 20%;margin-top: 0px;">
            <a href="#" style="display: inline-block">
                <!-- <img src="https://cdn3.iconfinder.com/data/icons/block/32/box_edit-512.png" width="30px" height="30px"></a> -->

                <div class="namepro ml-4" style="text-align: center;">@Html.DisplayFor(model => model.fullname)</div>
                <table class="table">

                    <tr>
                        <td class="tdl">
                            Tên đăng nhập
                        </td>
                        <td class="tdr">
                            @Html.DisplayFor(model => model.username)
                        </td>
                    </tr>
                    <tr>
                        <td class="tdl">
                            Địa chỉ
                        </td>
                        <td class="tdr">
                            @Html.DisplayFor(model => model.parent.address)
                        </td>
                    </tr>
                    <tr>
                        <td class="tdl">
                            Ngày sinh
                        </td>
                        <td class="tdr">
                            @Html.DisplayFor(model => model.birthday)
                        </td>
                    </tr>
                    <tr>
                        <td class="tdl">
                            Số điện thoại
                        </td>
                        <td class="tdr">
                            @Html.DisplayFor(model => model.phone)
                        </td>
                    </tr>

                    <tr>
                        <td class="tdl" style="padding-top: 19px;">
                            Lớp
                        </td>
                        <td class="tdr">
                            @Html.DisplayFor(model => model.@class)
                        </td>
                    </tr>
                    <tr>
                        <td class="tdl">
                            Phụ huynh
                        </td>
                        <td class="tdr">
                            @Html.DisplayFor(model => model.parent.fullname)
                        </td>
                    </tr>
                    <tr>
                        <td class="tdl"></td>
                        <td>
                            <button type="button" class="btn btn-primary p-2" data-toggle="modal" data-target="#myModal"
                                    style="margin-left: 65%">
                                Chỉnh sửa
                            </button>
