
@{
    var sessionapproved = ViewData["sessionapproved"] as List<eTUTOR.Models.session>;
}
<table class="table" style="text-align: center;">
    <tr>
        <th>
            Thứ
        </th>
        <th>
            Thời gian học
        </th>

        <th>
            Ngày đã học
        </th>
        <th>
            Gia sư
        </th>
        <th>
            Số buổi đã học
        </th>
    </tr>
    @if (!sessionapproved.Any())
    {
        <tr>
            <td colspan="5">Hông có buổi học nào</td>
        </tr>
    }
    else
    {
        foreach (var session in sessionapproved)
        {
            <tr>
                <td>
                    @session.day_otw
                </td>
                <td>
                    @session.start_time - @session.end_time
                </td>

                <td>
                    @session.student.fullname
                </td>

                <td>
                    @session.total_sessions
                </td>
                <td>
                    <a href="@Url.Action("SessionOfTutor","Tutor")">
                        <img src="https://static.thenounproject.com/png/6076-200.png" width="30" height="30">
                    </a>
                </td>
            </tr>
        }
    }
</table>

