
@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <title>Đăng nhập</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- LINEARICONS -->
    <link rel="stylesheet" href="fonts/linearicons/style.css">

    <!-- STYLE CSS -->
    <link href="~/Content/vendor/bootstrap/css/register.component.css" rel="stylesheet" />
</head>

<body>

    <div class="wrapper">
        <div class="inner">
            <div class="register-form flash hide">
                <form action="/User/Login" method="post">
                    <img src="~/Content/img/register/registration-form-1.png" alt="" class="image-1">
                    <h3>Đăng nhập</h3>
                    <div class="default">
                        <div class="form-holder">
                            <span class="lnr lnr-user"></span>
                            <input type="text" class="form-control" placeholder="Tên tài khoản" name="email">
                        </div>
                        <div class="form-holder">
                            <span class="lnr lnr-lock"></span>
                            <input type="password" class="form-control" placeholder="Mật khẩu" name="password">
                        </div>
                        <p style="padding-bottom: 10px">Nếu bạn chưa có tài khoản, nhấn chọn <a href="@Url.Action("register","User")">Đăng ký</a></p>
                        <a href="#" style="margin-left: 35%; margin-bottom: 20px">Quên mật khẩu ?</a>
                    </div>
                    <button type="submit">
                        <span>Đăng nhập</span>
                    </button>
                </form>

            </div>
        </div>
    </div>

    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="register.component.js"></script>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>
