        //        document.getElementById('emailids').innerHTML = " ** Email không đúng định dạng";
        //        return false;
        //    }
        //}

        $("#pw").validate({
            rules: {
                username: "required",

                emails: {
                    required: true,
                    email: true
                },

            },

            messages: {
                username: "Vui lòng nhập họ và tên",

                emails: {
                    required: "Vui lòng nhập Email",
                    minlength: "Email không đúng định dạng",
                },

            }
        });
    </script>
