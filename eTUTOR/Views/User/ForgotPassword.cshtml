
@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <title>Forgot Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- LINEARICONS -->
    <link rel="stylesheet" href="fonts/linearicons/style.css">

    <!-- STYLE CSS -->
    <link href="~/Content/vendor/bootstrap/css/register.component.css" rel="stylesheet" />
</head>

<body>

    <div class="wrapper">
        <div class="inner">
            <div class="register-form flash hide">
                <form action="/User/CheckForgotPW" method="post">
                    <img src="~/Content/img/register/registration-form-1.png" alt="" class="image-1">
                    <h3>Quên mật khẩu</h3>
                    <div class="default">
                        @if (ViewBag.Err != null)
                        {
                            <div><span style="color:brown">@ViewBag.Err</span></div>
                        }
                        <div><span class="lnr lnr-user">Hãy điền <span style="color:red">tên đăng nhập</span> và <span style="color:red">email</span> của bạn vào đây chúng tôi sẽ gửi mật khẩu mới vào email cho bạn</span> <br /></div>

                        <div class="form-holder">
                            <input type="text" class="form-control" placeholder="Username" name="username">
                        </div>
                        <div class="form-holder">
                            <input type="text" class="form-control" placeholder="Email" name="email">
                        </div>


                    </div>
                    Nếu bạn đã có tài khoản
                    <a href="~/User/Login" style="margin-left: 35%; margin-bottom: 20px">Login</a>
                    <button type="submit">
                        <span>Xác nhận</span>
                    </button>
                </form>

            </div>
        </div>
    </div>

    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="register.component.js"></script>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>
