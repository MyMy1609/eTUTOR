
@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <title>Forgot Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- LINEARICONS -->
    <link rel="stylesheet" href="fonts/linearicons/style.css">

    <!-- STYLE CSS -->
    <link href="~/Content/vendor/bootstrap/css/register.component.css" rel="stylesheet" />
</head>

<body>

    <div class="wrapper">
        <div class="inner">
            <div class="register-form flash hide">
                <form id="pw" action="/User/CheckForgotPW" method="post" @*onsubmit="return validation()"*@>
                    <img src="~/Content/img/register/registration-form-1.png" alt="" class="image-1">
                    <h3>Quên mật khẩu</h3>
                    <div class="default">
                        @if (ViewBag.Err != null)
                        {
                            <div><span style="color:brown">@ViewBag.Err</span></div>
                        }
                        <div><span class="lnr lnr-user">Hãy điền <span style="color:red">tên đăng nhập</span> và <span style="color:red">email</span> của bạn vào đây chúng tôi sẽ gửi mật khẩu mới vào email cho bạn</span> <br /></div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <input type="text" placeholder="Username" id="username"
                                           name="username" class="form-control" autocomplete="off">
                                    <span class="text-danger" id="username1"></span>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <input type="email" placeholder=" Email" id="emails"
                                           name="emails" class="form-control">
                                    <span class="text-danger" id="emailids"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    Nếu bạn đã có tài khoản
                    <a href="~/User/Login" style="margin-left: 35%; margin-bottom: 20px">Login</a>
                    <button type="submit">
                        <span>Xác nhận</span>
                    </button>
                </form>

            </div>
        </div>
    </div>

    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="register.component.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.15.0/jquery.validate.min.js"></script>
    <script type="text/javascript">
