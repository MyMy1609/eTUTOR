<body style="background-size: cover">
    <div class="row container">
        <div class="col-7 pt-5 pl-5 pr-1 pb-1 contact_img">
            <div class="row pl-5 p-3 hinhAnh" style="background-image: url('../../Content/img/banner/s-1.jpg'); background-repeat: no-repeat; ">
                <div class="contact-address mt-30">
                    <ul>
                        <li>
                            <div class="singel-address">
                                <div class="icon">
                                    <i class="fa fa-home text-light"></i>
                                    <p style="display: inline; font-size: 20px; color: white" class="ml-3">123 Hoàng Diệu, quận 4, Tp. Hồ Chí Minh</p>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="singel-address">
                                <div class="icon pt-3" style="margin-top: 1%">
                                    <i class="fa fa-phone text-light"></i>
                                    <p style="display: inline; font-size: 20px; color: white" class="ml-3">+3 123 456 789</p> </br>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="singel-address">
                                <div class="icon pt-3" style="margin-top: 1%">
                                    <div class="icon">
                                        <i class="fa fa-envelope-o text-light"></i>
                                        <p style="display: inline; font-size: 20px;color: white" class="ml-3">123 Hoàng Diệu, quận 4, Tp. Hồ Chí Minh</p>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>

            </div>
            <div class="row" style="margin-top: 1%">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.6644447242497!2d106.69690491480065!3d10.760323392332438!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f133765f339%3A0x99f29a2fa8faa1c!2zSDMgQnVpbGRpbmcsIDM4NCBIb8OgbmcgRGnhu4d1LCBQaMaw4budbmcgNiwgUXXhuq1uIDQsIEjhu5MgQ2jDrSBNaW5o!5e0!3m2!1sen!2s!4v1548321438732"
                        width="630" height="300" frameborder="0" allowfullscreen style="margin-top: 5%; border:0" class="mb-2"></iframe>
            </div>
        </div>
        <div class="col-4 container m-0">
            <form class="contact100-form validate-form" style="padding: 0; margin-left: 5%" action="/Home/Contact", method="post">
                <span class="contact100-form-title mb-4" style="padding-bottom: 0; padding-top: 10%">
                    Hãy liên hệ với chúng tôi
                </span>
                <div class="wrap-input100 validate-input" data-validate="Tên không rỗng" style="margin-top: 5%">
                    <input id="name" class="input100 " type="text" name="fullname" placeholder="Họ tên">
                    <span class="focus-input100"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Số điện thoại không rỗng">
                    <input id="soDT" class="input100" type="text" name="phone" placeholder="Số điện thoại">
                    <span class="focus-input100"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Email không rỗng và phải đúng định dạng: ex@abc.xyz">
                    <input id="email" class="input100" type="email" name="email" placeholder="Email">
                    <span class="focus-input100"></span>
                </div>
                @*<div class="wrap-input100 validate-input" data-validate="Chủ đề không được rỗng">
                    <input id="chuDe" class="input100" type="text" name="name" placeholder="Chủ đề">
                    <span class="focus-input100"></span>
                </div>*@
                <div class="wrap-input100 validate-input" data-validate="Message is required">
                    <textarea id="message" class="input100" name="content" placeholder="Nội dung cần liên hệ với chúng tôi..."></textarea>
                    <span class="focus-input100"></span>
                </div>

                <div class="container-contact100-form-btn">
                    <button class="contact100-form-btn mr-3" type="submit">
                        Gửi ngay
                    </button>
                </div>
            </form>
        </div>
    </div>

